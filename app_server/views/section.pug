extends layout

block content
  .row
    .display-3.pageTitle.capitalize=section.title
  .row
    form(action="") 
      each subsection in section.subsections
        .subsection
          h2.capitalize= subsection.title
          each component in subsection.components
            .component
              h3.capitalize.componentTitle= component.title 
              each attribute in component.attributes
                .form-check
                  input.form-check-input(type='checkbox' value="" id=component.title)
                  label.form-check-label(for=component.title)
                    p.capitalize.attribute=attribute
  script(src="../javascripts/sectionJS/sectionHandlers.js")
